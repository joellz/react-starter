{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "*": [ "*", "api/*", "config/*", "controllers/*" ]
    },
    "types": ["@types/node" ],

    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "lib": ["dom", "es2016"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "outDir": "build/",
    "sourceMap": true,
    "strictNullChecks": false,
    "module": "es6",
    "target": "es5",
    "allowJs": true
  }
}